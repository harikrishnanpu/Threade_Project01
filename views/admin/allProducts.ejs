        featureBtn.innerHTML = `<i class="icon-${newState === 'true' ? 'star-filled' : 'star'}"></i>`;
        featureBtn.setAttribute('onclick', `toggleFeatured('${id}', '${productCard.querySelector('.card-title').textContent}', '${newState}')`);
