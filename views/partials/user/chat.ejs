<style>

    @import url("https://fonts.googleapis.com/css?family=Open+Sans:300,600");

.harry-chat {
  position: fixed;
  bottom: 0;
  left: .4rem;
  width: 100%;
  max-width: 420px;
  background: #ffffff;
  box-shadow: 0 -6px 60px -20px rgba(0, 0, 0, 0.5);
  font-family: "Open Sans", sans-serif;
  z-index: 9999;
  transition: transform 0.25s ease;

  @media (max-width: 900px) {
    display: none ;
  }

}



.header-chat p{
  color: white !important;
}

.harry-chat--closed {
  transform: translateY(calc(100% - 54px)); /* keep only header visible */
}

/* ---------- Header ---------- */
.harry-chat__header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 54px;
  padding: 0 20px;
  background: #292460;
  color: #fff !important;
  cursor: pointer;
}
.harry-chat__header:hover { background: #393285; }

.u-text-highlight { color: #7ee0d2; }

/* toggle icons */
.harry-chat__toggle { fill: #fff; width: 20px; cursor: pointer; }
.harry-chat__toggle--close { display: none; }               /* default state */
.harry-chat--open .harry-chat__toggle--close { display: block; }
.harry-chat--open .harry-chat__toggle--speech { display: none; }

/* ---------- Window ---------- */
.harry-chat__window {
  height: 360px;
  padding: 40px 20px 20px;
  overflow-y: auto;
  scrollbar-width: none;
}
.harry-chat__window::-webkit-scrollbar { display: none; }

.harry-chat__messages {
  list-style: none;
  margin: 0;
  padding: 0;
  display: flex;
  flex-direction: column;
}

.harry-chat__bubble {
  display: inline-flex;
  padding: 12px 20px;
  border-radius: 6px;
  margin-bottom: 18px;
  max-width: 75%;
  word-break: break-word;
  line-height: 1.45;
  animation: fadeIn 0.25s ease-out;
}
.harry-chat__bubble--ai {
  background: #f0f0ff;
  color: #000;
  margin-right: 30px;
}
.harry-chat__bubble--user {
  background: #7ee0d2;
  color: #000;
  align-self: flex-end;
  margin-left: 30px;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(10px); }
  to   { opacity: 1; transform: translateY(0);  }
}

/* ---------- Entry ---------- */
.harry-chat__entry {
  display: flex;
  align-items: center;
  border-top: 1px solid #e6eaee;
  height: 60px;
  padding: 0 20px;
}
.harry-chat__input {
  flex: 1;
  height: 38px;
  border: none;
  font-size: 1rem;
}
.harry-chat__input:focus { outline: none; }
.harry-chat__send {
  fill: #7226e0;
  width: 24px;
  cursor: pointer;
  transition: fill 0.2s ease;
}
.harry-chat__send:hover { fill: #45148c; }

/* ---------- Utility ---------- */
* { box-sizing: border-box; }


</style>


<!-- Re-usable partial: include it once in your main layout -->
<div class="harry-chat harry-chat--closed">
  <!-- ===== Header ===== -->
  <div class="harry-chat__header">
    <p style="color: white;"><strong>Got a question?</strong> <span class="u-text-highlight">Ask Hari</span></p>

    <!-- toggle buttons -->
    <svg class="harry-chat__toggle harry-chat__toggle--speech" viewBox="0 0 32 32">
      <use xlink:href="#icon-speech"/>
    </svg>
    <svg class="harry-chat__toggle harry-chat__toggle--close" viewBox="0 0 32 32">
      <use xlink:href="#icon-close"/>
    </svg>
  </div>

  <!-- ===== Messages ===== -->
  <div class="harry-chat__window">
    <ul class="harry-chat__messages"><!-- bubbles appear here --></ul>
  </div>

  <!-- ===== Entry ===== -->
  <div class="harry-chat__entry">
    <input
      id="harryChatInput"
      type="text"
      class="harry-chat__input"
      placeholder="Write a messageâ€¦"
      autocomplete="off"
    />
    <svg id="harryChatSend" class="harry-chat__send" viewBox="0 0 23.97 21.9">
      <use xlink:href="#icon-send"/>
    </svg>
  </div>
</div>

