<style>
    .list-main{
			display: flex;
			justify-content: center;
			align-items: center;
			@media (max-width: 500px) {
				gap: 10px;
			}
		}

        .header.shop .list-main li:last-child{
            @media (max-width: 450px) {
                border-bottom: 1px solid #eee;
            }
        }

</style> 
 
 <header class="header">
        <div class="header__top">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6 col-md-6">
                        <div class="header__top__left">
                            <p>worlds fastest online shopping experience</p>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6">
                        <div class="header__top__right">
                            <div class="header__top__links">
                                <a href="#">Track Orders?</a>
                                <a href="#">FAQs</a>
                            </div>
                            <div class="header__top__hover">
                                <span>English <i class="arrow_carrot-down"></i></span>
                                <ul>
                                    <li>English</li>
                                    <li>Spanish</li>
                                    <li>Hindi</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
            <div class="navbar-main-content">

                    <div class="header__logo">
                       <a href="/"><h2>THREADÃ‹</h2></a>
                    </div>

  <div class="header-search">
    <input type="text" placeholder="Search products..." />
    <button type="submit"><i class="fa fa-search"></i></button>
  </div>

              <% if(user){ %>   <div class="header__nav__option">
                                    <div class="icon-group">
                                       <i class="fa-solid fa-user"></i>
                                    <div class="icon-group-inline">
                                        <span>Hi, <%= user.name%></span>
                                        <a href="/user/logout" class="logout bold">Logout</a>
                                    </div>
                                    </div>

                </div> <% }else{ %>
                    <div class="header__nav__option">
                        <a class="header-link" href="/user/login">Login</a>
                        <a class="header-link" href="/user/register">Signup</a>
                </div>  <% } %>
        </div>

        <div class="header__bottom_links">
                      <% if(user){ %>   <div class="header__bottom__right">
                            <div class="header__bottom_links">

                                <div>

                                    <a href="#"> <i class="fa fa-location"></i> Current Location</a>
                                </div>

                                    <div class="icon-group">
                                        <i class="fa-regular fa-heart"></i>
                                    <div class="icon-group-inline">
                                        <span>Wishlist</span>
                                        <span class="count">0 items</span>
                                    </div>
                                    </div>


                                    <div class="icon-group">
                                    <i class="fa-solid fa-cart-shopping"></i>
                                    <div onclick="gotoCartPage(`<%= user?._id %>`)" class="icon-group-inline">
                                        <span>Cart</span>
                                        <span class="count"><span id="HeadercartCount"><%= cartCount %></span> items</span>
                                    </div>
                                </div>
                            </div> 
                    </div> <% }else{ %>  <div class="header__bottom__right">
                            <div class="header__bottom_links">
