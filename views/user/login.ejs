<link rel="stylesheet" href="/css/login.css" />

<div class="header__top">
  <div class="container">
    <div class="row">
      <div class="col-lg-6 col-md-7">
        <div class="header__top__left">
          <p>Free shipping, 30-day return or refund guarantee.</p>
        </div>
      </div>
      <div class="col-lg-6 col-md-5">
        <div class="header__top__right">
          <div class="header__top__links">
            <a href="/user/register">Sign Up</a>
            <a href="#">FAQs</a>
          </div>
          <div class="header__top__hover">
            <span>English <i class="arrow_carrot-down"></i></span>
            <ul>
              <li>English</li>
              <li>Malayalam</li>
              <li>Hindi</li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<section class="login-wrapper">
  <div class="login-image">
    <img src="/img/login_banner.jpg" alt="Login Banner" />
  </div>

  <div class="login-section">
    <div class="login-box">
      <h2>Log in to Exclusive</h2>
      <p class="login-sub">Enter your login details</p>
      <p id="error-msg" class="error-msg"></p>

      <form id="login-form">
        <!-- Email -->
        <div class="input-group floating">
          <input
            type="email"
            name="email"
            id="email"
            placeholder=" "
          />
          <label for="email">Email</label>
          <p id="email-input-error" class="error-msg-input"></p>
        </div>

        <!-- Password -->
        <div class="input-group floating">
          <input
            type="password"
            name="password"
            id="password"
            placeholder=" "
          />
          <label for="password">Password</label>
          <p id="password-input-error" class="error-msg-input"></p>
          <span class="toggle-password" onclick="togglePassword()">show</span>
        </div>
        <div class="forgot-wrap">
          <a href="/user/forgotten-password">Forgot password?</a>
        </div>

        <!-- Buttons -->
        <button type="submit" class="login-btn primary">Login</button>
        <div class="or-divider"><span>OR</span></div>
        <button type="button" onclick="googleAuth()" class="login-btn google">
          <img src="/img/google.png" alt="Google" /> Sign in with Google
        </button>

        <p class="login-hint">
          Don't have an account? <a href="/user/register">Sign up</a>
        </p>
      </form>
    </div>
  </div>
</section>

<script>
  const BASE_URL = window.location.origin;
  const params = new URLSearchParams(window.location.search);
  const error = params.get("error");
  const errorMessage = document.getElementById("error-msg");

  if (error === "blocked") {
    errorMessage.innerText += "User account is blocked";
  }
  setTimeout(() => {
    errorMessage.innerText = "";
  }, 6000);

    function googleAuth() {
      disableAllSubmitButtons();
      window.location.href = '/user/auth/google';
  }


  function togglePassword() {
    const passwordInput = document.getElementById("password");
    const toggleBtn = document.querySelector(".toggle-password");
    const isVisible = passwordInput.type === "text";
    passwordInput.type = isVisible ? "password" : "text";
    toggleBtn.textContent = isVisible ? "show" : "hide";
  }

  document
    .getElementById("login-form")
    .addEventListener("submit", async (e) => {
      e.preventDefault();

      errorMessage.innerText = "";
      clearAllErrors();
      resetAllSubmitButtons();

      const emailInput = document.getElementById("email");
      const passwordInput = document.getElementById("password");

      const email = emailInput.value.trim();
      const password = passwordInput.value.trim();

      if (checkEmailValid(email) && checkPasswordValid(password)) {
        try {
          disableAllSubmitButtons();

          const response = await fetch(`${BASE_URL}/user/login`, {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ email, password }),
          });

          const data = await response.json();

          if (response.ok) {
            window.location.href = "/user/home";
          } else {
            errorMessage.innerText =
              data.message || "Login failed. Please try again.";
          }
        } catch (err) {
          console.error(err);
          errorMessage.innerText = err.message || "Network error.";
        } finally {
          resetAllSubmitButtons();
        }
      } else {
        if (!checkEmailValid(email)) {
          emailInput.classList.add('invalid');
          showInputErrorMessage( "email","Invalid email address.\n")
        }
        if (!checkPasswordValid(password)) {
          passwordInput.classList.add('invalid')
          showInputErrorMessage('password',"Weak password. Use letters, numbers, and special characters.\n");
        }
      }

      setTimeout(() => {
        errorMessage.innerText = "";
      }, 6000);
    });
</script>
