                    <div class="timeline-marker">
                      <i class="<%= order.orderStatus === 'cancelled' ? 'fas fa-times' : (order.orderStatus.includes('return') ? 'fas fa-undo' : 'fas fa-check') %>"></i>
                    </div>
                    <div class="timeline-content">
