
<div class="order-success-wrapper mx-auto px-3 py-5">
  <!-- tick animation -->
  <div class="order-success-check mb-4">
    <svg viewBox="0 0 52 52">
      <polyline points="14,27 23,36 40,19"></polyline>
    </svg>
  </div>

  <!-- order number -->
  <p class="order-success-id mb-4">
    Order&nbsp;ID:&nbsp;<%= order.orderNumber %>
  </p>

  <!-- actions -->
  <div class="order-success-actions">
    <a href="/user/products/shop" class="order-success-btn">Continue Shopping</a>
    <a href="/user/profile/orders/<%= order._id %>" class="order-success-btn">View Order</a>
  </div>
</div>

<style>
  :root{--black:#000;--white:#fff;}

  .order-success-wrapper{
    max-width:420px;text-align:center;background:var(--white);
  }

  /* tick circle */
  .order-success-check{
    width:120px;height:120px;border:6px solid var(--black);
    border-radius:50%;margin-inline:auto;display:flex;
    align-items:center;justify-content:center;
  }

  .order-success-check svg{
    width:64px;height:64px;stroke:var(--black);stroke-width:8;
    fill:none;stroke-linecap:round;stroke-linejoin:round;
    stroke-dasharray:156;stroke-dashoffset:156;
    animation:order-success-draw 1s ease-out forwards 1s;
  }
  @keyframes order-success-draw{to{stroke-dashoffset:0;}}

  /* text */
  .order-success-id{font-size:.8rem;font-weight:600;word-break:break-all;}

  /* buttons */
  .order-success-btn{
    display:block;text-decoration:none;text-align:center;
    background:var(--black);color:var(--white);border-radius:0;
    padding:.75rem 1rem;font-weight:600;transition:.3s;
  }
  .order-success-btn:hover{opacity:.9;color:var(--white);}

  /* responsive two-column buttons ≥576px */
  .order-success-actions{display:grid;gap:.75rem;}
  @media (min-width:576px){
    .order-success-actions{grid-template-columns:repeat(2,1fr);}
  }
</style>
<!-- ▴▴ Order-Success component ▴▴ -->
