  const BASE_URL = window.location.origin;
  const productData = <%- JSON.stringify(product || {}) %>;
  
  // Current selection
  let currentVariant = {
    size: null,
    color: null
  };

  // Image management
  let allImages = [];
  let currentImages = [];
  let drift = null;

  // Initialize
  init();

  function init() {
    setupImages();
    setupImageGallery();
    setupVariantSelection();
    setupQuantityControls();
    setupTabs();
    setupAddToCart();
    setupWishlist();
    updateVariantInfo();
