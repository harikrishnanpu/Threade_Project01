                            <% relatedProducts.forEach(relatedProduct => { %>
                                <div class="col-lg-3 col-md-4 col-sm-6">
                                    <div class="related-product">
                                        <div class="related-product-img">
                                            <a href="/product/<%= relatedProduct._id %>">
                                                <img src="<%= relatedProduct.images && relatedProduct.images.length > 0 ? relatedProduct.images[0] : '/img/product/no-image.jpg' %>" alt="<%= relatedProduct.name %>">
                                            </a>
                                        </div>
                                        <div class="related-product-info">
                                            <h5><a href="/product/<%= relatedProduct._id %>"><%= relatedProduct.name %></a></h5>
                                            <div class="rating">
                                                <% for (let i = 1; i <= 5; i++) { %>
                                                    <i class="<%= i <= relatedProduct.rating ? 'fas' : 'far' %> fa-star"></i>
                                                <% } %>
                                            </div>
                                            <div class="price">
                                                <% if (relatedProduct.salePrice && relatedProduct.salePrice < relatedProduct.regularPrice) { %>
                                                    $<%= relatedProduct.salePrice.toFixed(2) %> <span class="old-price">$<%= relatedProduct.regularPrice.toFixed(2) %></span>
                                                <% } else { %>
                                                    $<%= relatedProduct.regularPrice.toFixed(2) %>
                                                <% } %>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            <% }) %>
                        <% } else { %>
                            <div class="col-12">
