                                            <div class="form-group">
                                                <label for="review-name">Your Name *</label>
                                                <input type="text" class="form-control" id="review-name" name="name" required>
                                            </div>
                                            
                                            <div class="form-group">
                                                <label for="review-email">Your Email *</label>
                                                <input type="email" class="form-control" id="review-email" name="email" required>
                                            </div>
                                            
                                            <div class="form-group rating-selector">
                                                <label>Your Rating *</label>
                                                <div class="stars">
                                                    <i class="far fa-star" data-rating="1"></i>
                                                    <i class="far fa-star" data-rating="2"></i>
                                                    <i class="far fa-star" data-rating="3"></i>
                                                    <i class="far fa-star" data-rating="4"></i>
                                                    <i class="far fa-star" data-rating="5"></i>
                                                </div>
                                                <input type="hidden" name="rating" id="review-rating" value="0">
                                            </div>
                                            
                                            <div class="form-group">
                                                <label for="review-comment">Your Review *</label>
                                                <textarea class="form-control" id="review-comment" name="comment" rows="5" required></textarea>
                                            </div>
                                            
                                            <button type="submit" class="btn btn-primary">Submit Review</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
